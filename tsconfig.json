{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": "./src",
    "module": "esnext",
    "target": "es2019",
    "noImplicitAny": true,
    "outDir": "./build/",
    "rootDir": "./",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ]
}
